/* 搜索 */
.searchBox {
  position: fixed;
  z-index: 1;
  background-color: #fff;
  width: 100%;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 50rpx;
  align-items: center;
}
/*选项卡图标*/
.font10 {
  margin-left: 10rpx;
  font-size: 10px;
}
.icon10{
  color: #a9a9a9;
  margin-left: 10rpx;
  font-size: 10px;
}
.font25{
  font-size: 30rpx;
}
.searchBox-input {
  display: flex;
  margin-left: 40rpx;
  background: #fafafa;
  height: 70rpx;
  line-height: 70rpx;
  width: 450rpx;
  border-radius: 40rpx;
  padding: 0 30rpx;
  color: #a4a4a4;
}
.searchBox-input text {
  margin-right: 20rpx;
}
/* 轮播图 */
.slide-image{
  width: 750rpx;
  height: 350rpx;
}
.swiper-box{
  padding-top: 100rpx;
  height: 220rpx;
  padding-left: 5%;
  padding-right: 5%;
}
/* 图标导航 */
.icon-nav {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 50rpx;
  background: #fff;
}
.icon-nav navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon-nav image {
  width: 100rpx;
  height: 100rpx;

}
.icon-nav text {
  font-size: 12px;
}

/* 租房小组 */
.renting-box{
  height: 140rpx;
  padding-bottom: 40rpx;
}
.renting-itme {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.renting-itme image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
/* 推荐房源 */
.sview{
  height: 1000rpx;
}
.recommend {
  margin-top: 3px;
  background: #fff;
  color: #474747;
}

.recommend-title {
  font-size: 22px;
  font-weight: bold;
}
.recommend-search {
  display: flex;
  justify-content: space-around;
  height: 90rpx;
  line-height: 90rpx;
}
.recommend-list {
  border-top: 1px solid rgba(211,211,211,0.5);
  display: flex;
  padding: 20rpx;
}
.recommend-list image {
  width: 280rpx;
  height: 210rpx;
  border-radius: 8rpx;
}

.recommend-list-item {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.recommend-list-item-spec {
  color: #ccc;
  font-size: 14px;
}
.recommend-list-item-tag text{
  margin: 6rpx;
}
.recommend-list-item-price {
  color: #ff961e;
}
.recommend-list-item-price text{
  font-weight: bold;
}

.tag1{
  padding: 10rpx;
  background: #f5f5f5;
  color: #a9a9a9;
  font-size: 10px;
  border-radius: 5px;
}
.tag2{
  padding: 10rpx;
  background: #f5f5f5;
  color: #a9a9a9;
  font-size: 10px;
  border-radius: 5px;
}
.tag3{
  padding: 10rpx;
  background: #f5f5f5;
  color: #a9a9a9;
  font-size: 10px;
  border-radius: 5px;
}

/* 回到顶部 */
.gototop{
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  color: #ccc;
}
.font30{
  font-size: 40px;
}

.nav{
  position: relative;
}
.shadediv{
 background: #fff;
 width: 750rpx;
 height: 300rpx;
 position:absolute;
 top: 80rpx;
 display: flex;
 opacity: 0;
 transition: all 1s;
}
.now{
  transition: all 1s;
  opacity: 1;
  z-index: 999;
}
/*控制推荐房源图标选中*/
.selected{
  color: #ff961e;
}
.columns{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.columns view{
  padding-top: 20rpx;
}
.column{
  color: #ff961e;
}
.line{
  border-top: 8rpx solid #ff961e;
}